{
  "version": "4.0.0",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "changelog": {
    "repo": "uport-project/daf",
    "cacheDir": ".changelog"
  },
  "command": {
    "publish": {
      "allowBranch": ["master", "beta"],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): %s"
    },
    "version": {
      "allowBranch": ["beta"],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(beta-release): %s"
    }
  },
  "useWorkspaces": true
}
