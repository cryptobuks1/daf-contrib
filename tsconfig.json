{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowJs": true,
    "composite": true
  },
  "exclude": [
    "**/__tests__/**/*",
    "**/build/**/*"
  ]
}