{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowJs": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
