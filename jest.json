{
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/src/**/*.ts",
    "!**/examples/**",
    "!**/types/**",
    "!**/build/**",
    "!**/node_modules/**"
  ],
  "coverageDirectory":"./coverage",
  "transform": {
    "\\.jsx?$": "babel-jest",
    "\\.tsx?$": "ts-jest"
  },
  "testMatch": ["**/__tests__/**/*.test.*"],
  "globals": {
    "ts-jest": {
      "tsConfig": "./packages/tsconfig.settings.json"
    }
  },
  "testEnvironment": "node"
}
